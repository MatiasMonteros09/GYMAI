generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Body_Part {
  id         Int     @id @default(autoincrement())
  name       String
  routine_id Int     @unique
  Routine    Routine @relation(fields: [routine_id], references: [id])
}

model Objetive {
  id          Int     @id @default(autoincrement())
  description String
  routine_id  Int     @unique
  Routine     Routine @relation(fields: [routine_id], references: [id])
}

model Routine {
  id         Int        @id @default(autoincrement())
  init       DateTime
  creator_id Int
  Body_Part  Body_Part?
  Objetive   Objetive?
  User       User       @relation(fields: [creator_id], references: [id])
}

model User {
  id         Int       @id @default(autoincrement())
  username   String
  password   String
  email      String    @unique
  created_at DateTime  @default(now())
  Routine    Routine[]
}
