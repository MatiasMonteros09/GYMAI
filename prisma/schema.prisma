generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Objetive {
  id          Int    @id @default(autoincrement())
  description String @unique
}

model Routine {
  id         Int      @id @default(autoincrement())
  init       DateTime
  creator_id Int
  User       User     @relation(fields: [creator_id], references: [id])
}

model User {
  id         Int       @id @default(autoincrement())
  username   String
  password   String
  email      String    @unique
  created_at DateTime  @default(now())
  Routine    Routine[]
}

model BodyPart {
  id   Int    @id @default(autoincrement())
  name String @unique
}
