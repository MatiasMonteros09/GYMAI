// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id         Int @id @default(autoincrement())
  name       String
  lastname   String
  password   String
  email      String 
  createdAt  DateTime @default(now()) @map("created_at")
  routine   Routine[]

  @@map("user")
}

model Routine {
  id         Int  @id @default(autoincrement())
  init       DateTime
  creator    User @relation(fields: [creatorId], references: [id])
  creatorId  Int @map("creator_id")
  body_part  BodyPart?
  objetive   Objetive?

  @@map("routine")
}

model BodyPart{
  id         Int  @id @default(autoincrement())
  name       String
  routine    Routine @relation(fields: [routineId], references: [id])
  routineId Int  @unique @map("routine_id") // relation scalar field (used in the `@relation` attribute above)

 @@map("body_part") 
}

model Objetive{
  id          Int  @id @default(autoincrement())
  description String
  routine    Routine @relation(fields: [routineId], references: [id])
  routineId Int  @unique @map("routine_id") // relation scalar field (used in the `@relation` attribute above)

  @@map("objetive")
}